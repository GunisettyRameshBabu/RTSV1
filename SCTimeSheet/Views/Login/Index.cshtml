
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login page</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Contents/assets/Login/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Contents/assets/Login/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Contents/assets/Login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Contents/assets/Login/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Contents/assets/Login/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Contents/assets/Login/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Contents/assets/Login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Contents/assets/Login/css/main.css">
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        * {
            box-sizing: border-box
        }

        /* Full-width input fields */
        input[type=text], input[type=password] {
            width: 100%;
            padding: 15px;
            margin: 5px 0 22px 0;
            display: inline-block;
            border: none;
            background: #f1f1f1;
        }

            input[type=text]:focus, input[type=password]:focus {
                background-color: #ddd;
                outline: none;
            }

        hr {
            border: 1px solid #f1f1f1;
            margin-bottom: 25px;
        }

        /* Set a style for all buttons */
        button {
            background-color: #4CAF50;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 100%;
            opacity: 0.9;
        }

        .hero-text {
            text-align: center;
            top: 50%;
            left: 40%;
            color: white;
        }

        .hero-img {
            color: white;
        }

        body {
            background-image: url('../../Contents/assets/Login/images/img-01.png');
            background-color: #cccccc;
            height: 100%;
            background-repeat: no-repeat;
            background-size: cover;
            padding: 20px;
            width: 100%;
        }



        /* Extra styles for the cancel button */
        .cancelbtn {
            padding: 14px 20px;
            background-color: #f44336;
        }

        /* Float cancel and signup buttons and add an equal width */
        .cancelbtn, .signupbtn {
            float: left;
            width: 50%;
        }

        /* Add padding to container elements */
        .container {
            padding: 16px;
        }

        /* Clear floats */
        .clearfix::after {
            content: "";
            clear: both;
            display: table;
        }

        .msg-danger {
            color: red;
        }
        /* Change styles for cancel button and signup button on extra small screens */
        @@media screen and (max-width: 300px) {
            .cancelbtn, .signupbtn {
                width: 100%;
            }
        }
    </style>
    <!--===============================================================================================-->
</head>
<body>
    @using (Html.BeginForm())
    {
        @*@Html.AntiForgeryToken()*@
        <div class="container" >
            <div class="row">
                <div class="col-md-5">
                </div>
                <div class="col-md-3">
                    <img src="~/Contents/assets/Login/images/semcorp.png" alt="IMG" style="height:80px;margin-top:100px;">
                </div>
                <div class="col-md-4">
                </div>
            </div>
                <div class="row" style="height:20px;">
                </div>
                <div class="row">
                    <div class="col-md-4"></div>
                    <div class="col-md-5 hero-img" style="background-color:white;height:300px;">
                        <div class="hero-text">
                            <h3 style="font-size:25px;color: black; margin-top: 40px;">Welcome to Resource Tracking System</h3>
                        </div>
                        <div class="hero-text">
                            <h3 style="font-size:25px;color: black; margin-top: 98px;">Login to start your session</h3>
                        </div>
                        <div style="height:20px"></div>
                        <div>
                            <input type="submit" id="submit" value="Login" class="btn btn-primary btn-lg btn-block" style="background-color: #00664e;" name="action:Login" />
                        </div>
                    </div>
                    <div class="col-md-3"></div>
                </div>

                </div>
    }

    </body>
</html>